@model VendingMachine.Models.Product

    <div class="row justify-content-center">
        <div class="col-md-4">
            <h3>Add product</h3>
            <form asp-action="AddProduct" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" placeholder="@nameof(Product.Name)" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Price"></label>
                    <input asp-for="@Model.Price" placeholder="@nameof(Product.Price)" class="form-control" />
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ImageUrl"></label>
                    <div class="custom-file">
                        <input type="file" name="file" class="custom-file-input" id="newCustomFile" required />
                        <label class="custom-file-label" for="newCustomFile">Choose file</label>
                    </div>
                    <span id="fileValidationText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Quantity"></label>
                    <input asp-for="@Model.Quantity" placeholder="@nameof(Product.Quantity)" class="form-control" />
                    <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Add" id="submitButton" class="btn btn-primary btn-lg px-5" />
                </div>
            </form>
        </div>
    </div>